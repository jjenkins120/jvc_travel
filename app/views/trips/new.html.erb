
<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
    <p style="color: red"><%= error%></p>
    <%end%>
<%end%>



   <div class="container new-trip">
        <%= form_for @trip do |f| %>
        <h3>Create a new Trip!</h3>
        <div class="form-group">
            <%= f.label :duration %>
	        <%= f.text_field :duration%>
        </div>
        <div class = "form-group">
            <%= f.label :cost %>
	        <%= f.text_field :cost%>
        </div>
        <%=f.fields_for :destination, @destination do |d|%>
            <div class="form-group">
                <%= d.label :city %>
                <%= d.text_field :city%>
            </div>
            <div class="form-group">
                <%= d.label :country %>
                <%= d.text_field :country%>
            </div>
        <% end %>
        <%= f.submit 'Submit', class: "btn btn-primary create-btn" %>
    <% end %>
    </div>