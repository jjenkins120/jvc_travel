<h1>Trips#new</h1>


<%#BE SURE TO REMOVE USER ID COLLECTION SELECT FROM THE FORM FIELD%>


<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
    <p style="color: red"><%= error%></p>
    <%end%>
<%end%>


<%= form_for @trip do |f| %>
	<ul>
		<% if @trip.errors.any? %>
			<%= @trip.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		<% end %>
	</ul>

<p>Trip Details</p>
	<%= f.label :duration %>
	<%= f.text_field :duration%><br><br>
    <%= f.label :cost %>
	<%= f.text_field :cost%><br><br>
    <%= f.label :destination %>
    <%= f.collection_select :destination, @destinations, :id, :country %><br>
    <%= f.collection_select :destination, @destinations, :id, :city %><br><br>
    <%= f.hidden_field :user_id %>
	<%= f.submit %>
<% end %>

 