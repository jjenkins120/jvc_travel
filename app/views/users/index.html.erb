<div class="container">
    <% @users.each do |user_instance|%>
    <% if user_instance != current_user %>
    <div class = "individual-trip">
        <div class="card text-center mx-auto mt-5" style="width: 18rem;">
            <div class="text-center">
                <%= image_tag user_instance.profile_img_url%>
            </div>
            <div class="card-body" >
                <h5 class="card-title">Traveler: <%= link_to user_instance.name, user_path(user_instance.id) %></h5>
                <p class="card-text">Username: <%=user_instance.username%></p>
            </div>
            </div>
        </div>
    <div>
    <%end%>
    <%end%>
</div>


