<% if flash[:my_errors] %>
<% flash[:my_errors].each do |error|%>
<p><%= error %></p>
<% end%>
<% end%>


<%= form_for @user do |f| %>
<%= f.label :username  %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.label :profile_img_url %>
<%= f.text_field :profile_img_url %>

<%= f.label :name  %>
<%= f.text_field :name%>

<%= f.label :email %>
<%= f.text_field :email%>

<%= f.label :age %>
<%= f.number_field :age%>

<%= f.label :favorite_destination %>
<%= f.collection_select :favorite_destination, Destination.all, :city, :city%>

<%=f.submit%>

<%end%>

<p><%= link_to "Go back to all users", users_path %></p>
