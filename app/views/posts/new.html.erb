<h1>Posts#new</h1>

<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
    <p style="color: red"><%= error%></p>
    <%end%>
<%end%>


<%= form_for @post do |f| %>


<p>Post Info!</p>
	<%= f.label :title %>
	<%= f.text_field :title%><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description%><br><br>
    <%= f.label :trip %><br>
    <%= f.collection_select :trip_id, @current_user.trips, :id, :display_destination_and_date %><br><br>
    <%= f.label :choose_your_trip_tags %><br>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br><br>
    <%= f.fields_for :tags, @post.tags.build do |tags_fields| %>
        <%= tags_fields.label :add_a_custom_tag_to_your_post %>
        <%= tags_fields.text_field :name %>
     <% end %>
	<%= f.submit %>

<% end %>

