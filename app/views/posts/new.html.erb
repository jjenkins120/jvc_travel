<h1>Posts#new</h1>

<%if flash[:errors]%>
    <%flash[:errors].each do |error|%>
    <p style="color: red"><%= error%></p>
    <%end%>
<%end%>


<%= form_for @post do |f| %>


<p>Post Info!</p>
	<%= f.label :title %>
	<%= f.text_field :title%><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description%><br><br>
    <%= f.label :trip %><br>
    <%= f.collection_select :trip_id, @current_user.trips, :id, :city %><br><br>
    <%= f.label :tags %><br>
    <%=f.fields_for :tags, @tag do |t|%>
        <%= t.label :name %>
        <%= t.text_field :name%><br><br>
    <% end %>
	<%= f.submit %>

<% end %>

